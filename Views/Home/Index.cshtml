    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Floor</th>
                    <th scope="col">Room#</th>
                    <th scope="col">Room Type</th>
                    <th scope="col">Charges/Day</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td><p>1500</p></td>
                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                            Reserve
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Reserve Your Room</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div>
                                            <form>
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="inputEmail4">Reservation</label>
                                                        <input type="text" class="form-control" id="reservation" placeholder="Reservation">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="inputPassword4">Room #</label>
                                                        <input type="number" class="form-control" id="Room" placeholder="Enter your Room">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputAddress">Guest Name</label>
                                                    <input type="text" class="form-control" id="gName" placeholder=" Enter Guest Name">
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputAddress2">CNIC</label>
                                                    <input type="number" class="form-control" id="inputAddress2" placeholder="Enter your CNIC">
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="inputCity">Phone</label>
                                                        <input type="number" class="form-control" id="inputCity" placeholder="Enter your Phone No.">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="inputCity">Total Payable</label>
                                                        <input type="number" class="form-control" id="Payable" placeholder="Payable Amount">
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="inputState">Stay Duration</label>
                                                        <input type="datetime-local" class="form-control" id="Duration" placeholder="Enter your Duration">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="inputZip">To</label>
                                                        <input type="datetime-local" class="form-control" id="Duration" placeholder="Duration">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td><p>3500</p></td>
                    <td>
                        <button class="btn btn-primary">Reserve</button>
                    </td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Larry</td>
                    <td>the Bird</td>
